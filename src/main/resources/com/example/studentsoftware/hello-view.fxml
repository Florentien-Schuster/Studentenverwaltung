<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="242.0" prefWidth="479.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.studentsoftware.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="Welcome to the Student administration software!" textAlignment="CENTER" />
   <TextField fx:id="usernameField" promptText="Username"/>
   <PasswordField fx:id="passwordField" promptText="Password" />

    <Button fx:id="loginButton" text="Login" onAction="#loginHandler"/>
    <Label fx:id="messageLabel"/>
</VBox>
